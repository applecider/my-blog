<div class="col-md-6 col-12 mb-4">
  <a href="<%- config.root %><%- item.path %>">
    <div class="carousel slide go-on-hover">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100 img-fluid portfolio-img" src="<%- config.root %><%- item.cover_image || theme.default_cover_image %>" alt="First slide">
        </div>
        <% if (item.images) { %>
          <% for (var i = 0; i < item.images.length; i++) { %>
            <div class="carousel-item">
              <img class="d-block w-100 img-fluid portfolio-img" src="<%- config.root %><%- item.images[i] %>" alt="First slide">
            </div>
          <% }%>
        <% }%>
      </div>
    </div>
    <div class="overlay d-flex flex-column align-items-center justify-content-center">
      <div class="overlay-text">
        <%- item.title %>
      </div>
      <div class="overlay-text subtitle">
        <%- item.subtitle %>
      </div>
    </div>
  </a>
</div>
